 <main>
    <article class="Main-Todo-Layout">
      <h1 class="TodoPage-title">My Todo-list</h1>
      <%= form_with(url: "/todos", method: "post", class: "Todo-new") do%>
        <%= text_field_tag "todo_text", nil, placeholder:"What's Next" ,class:"Todo-text" %>
        <%= date_field_tag "due_date", nil ,class:"Todo-date" %>
        <%= submit_tag "Add",class:"Todo-AddButton"%>
      <% end %>
      <%= render partial: "todo-section",locals: {
        section_title: "Overdue",
        todos: @todos.overdue,
        show_due_date: true
        } %>
      <%= render partial: "todo-section",locals: {
        section_title: "Due Today",
        todos: @todos.due_today,
        show_due_date: false
        } %>
      <%= render partial: "todo-section",locals: {
        section_title: "Due Later",
        todos: @todos.due_later,
        show_due_date: true
        } %>
      </article>
 </main>
