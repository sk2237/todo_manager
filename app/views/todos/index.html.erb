 <main>
    <article class="Main-Todo-Layout">
      <h1 class="TodoPage-title">My Todo-list</h1>
      <%= form_with(url: "/todos", method: "post", class: "Todo-new") do%>
        <input class="Todo-text" type="text" placeholder="What's Next " name="todo_text">
        <input class="Todo-date" type="date" name="due_date">
        <input class="Todo-AddButton" type="submit" value="Add">
      <% end %>
      <%= render partial: "todo-section",locals: {
        section_title: "Overdue",
        todos: Todo.overdue,
        show_due_date: true
        } %>
      <%= render partial: "todo-section",locals: {
        section_title: "Due Today",
        todos: Todo.due_today,
        show_due_date: false
        } %>
      <%= render partial: "todo-section",locals: {
        section_title: "Due Later",
        todos: Todo.due_later,
        show_due_date: true
        } %>
      </article>
 </main>
